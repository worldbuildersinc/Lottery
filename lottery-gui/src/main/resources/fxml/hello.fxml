<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import org.tbee.javafx.scene.layout.fxml.*?>
<MigPane xmlns:fx="http://javafx.com/fxml" id="rootPane"
         fx:controller="org.worldbuilders.MainController"
         styleClass="main-panel"
         layout="insets 20"
         cols="[label, pref!][grow, 50::]"
         rows="">

    <Label text="First Name:"/>
    <TextField fx:id="donorField" prefColumnCount="30" MigPane.cc="growx, wrap"/>
    <Label text="Last Name:"/>
    <TextField fx:id="prizeField" prefColumnCount="30" MigPane.cc="growx, wrap"/>

    <Button text="Say Hello" onAction="#handleLotteryStart" MigPane.cc="skip, gap :push, gaptop 15, wrap"/>

    <Label fx:id="messageLabel" styleClass="hello-message" MigPane.cc="span, growx, gaptop 15"/>

</MigPane>